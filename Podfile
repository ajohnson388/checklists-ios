# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'Checklist' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Checklist
  pod 'Gloss', '2.0.0-beta.2'
  pod 'couchbase-lite-ios', '~> 1.4'

  target 'ChecklistTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'couchbase-lite-ios', '~> 1.4'
    pod 'Gloss', '2.0.0-beta.2'
  end

  target 'ChecklistUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'couchbase-lite-ios', '~> 1.4'
    pod 'Gloss', '2.0.0-beta.2'
  end
  
  target 'Checklist Widget' do
    inherit! :search_paths
    pod 'couchbase-lite-ios', '~> 1.4'
    pod 'Gloss', '2.0.0-beta.2'
  end
end
